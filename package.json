{
  "name": "study-app-nodejs",
  "version": "1.0.0",
  "description": "An application focused on creating studying questions, notes, and building knowledge through reinforcement learning.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && node --experimental-sqlite --no-warnings=ExperimentalWarnings ./dist/index.js",
    "dev": "tsx --experimental-sqlite --no-warnings=ExperimentalWarnings ./src/index.ts",
    "test": "NODE_ENV='test' tsx --experimental-sqlite --no-warnings=ExperimentalWarnings --test './src/**/*.test.*'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateuscgodoy/study-app-nodejs.git"
  },
  "keywords": [
    "\"Study",
    "App\""
  ],
  "author": "Mateus Colombo Godoy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateuscgodoy/study-app-nodejs/issues"
  },
  "homepage": "https://github.com/mateuscgodoy/study-app-nodejs#readme",
  "devDependencies": {
    "@types/node": "^22.8.7",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
